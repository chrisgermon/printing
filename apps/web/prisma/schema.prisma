generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  RECEIVED
  PROOF_PREPARING
  PROOF_SENT
  AWAITING_APPROVAL
  APPROVED
  PRINTING
  READY_TO_SHIP
  SHIPPED
  DELIVERED
  CANCELLED
}

enum ActorType {
  CUSTOMER
  STAFF
  SYSTEM
}

enum JobStatus {
  PENDING
  PROCESSING
  DONE
  FAILED
}

enum UserRole {
  CUSTOMER
  STAFF
  ADMIN
}

enum UserType {
  INTERNAL
  CLIENT
}

enum ProofReviewStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CommunicationChannel {
  EMAIL
}

enum CommunicationDirection {
  OUTBOUND
  INBOUND
}

model Customer {
  id             String             @id @default(cuid())
  companyId      String?
  email          String             @unique
  name           String
  company        String?
  phone          String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  companyRef     Company?           @relation(fields: [companyId], references: [id], onDelete: SetNull)
  orders         Order[]
  communications CommunicationLog[]
  userAccounts   UserAccount[]

  @@index([companyId])
}

model Order {
  id             String             @id @default(cuid())
  customerId     String
  title          String
  quantity       Int
  notes          String?
  dueDate        DateTime?
  status         OrderStatus        @default(RECEIVED)
  quotedAmount   Decimal?           @db.Decimal(10, 2)
  trackingCode   String?
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  customer       Customer           @relation(fields: [customerId], references: [id], onDelete: Restrict)
  proofFiles     ProofFile[]
  activityLogs   ActivityLog[]
  outboxJobs     OutboxJob[]
  communications CommunicationLog[]

  @@index([customerId])
  @@index([status])
}

model ProofFile {
  id           String            @id @default(cuid())
  orderId      String
  objectKey    String
  fileName     String
  contentType  String
  uploadedBy   ActorType
  uploaderRef  String
  reviewStatus ProofReviewStatus @default(PENDING)
  reviewNote   String?
  reviewedBy   String?
  reviewedAt   DateTime?
  createdAt    DateTime          @default(now())
  order        Order             @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
}

model ActivityLog {
  id         String   @id @default(cuid())
  orderId    String
  actorType  ActorType
  actorRef   String
  eventType  String
  eventData  Json
  createdAt  DateTime @default(now())
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([eventType])
}

model OutboxJob {
  id            String    @id @default(cuid())
  orderId       String?
  type          String
  payload       Json
  status        JobStatus @default(PENDING)
  attempts      Int       @default(0)
  lastError     String?
  runAfter      DateTime  @default(now())
  processedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  order         Order?    @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([status, runAfter])
  @@index([orderId])
}

model UserAccount {
  id           String   @id @default(cuid())
  companyId    String?
  customerId   String?
  name         String
  email        String   @unique
  passwordHash String
  role         UserRole @default(CUSTOMER)
  userType     UserType @default(CLIENT)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  company      Company? @relation(fields: [companyId], references: [id], onDelete: SetNull)
  customer     Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)

  @@index([companyId])
  @@index([customerId])
}

model CommunicationLog {
  id          String                 @id @default(cuid())
  customerId  String
  orderId     String?
  channel     CommunicationChannel   @default(EMAIL)
  direction   CommunicationDirection @default(OUTBOUND)
  toEmail     String
  subject     String
  body        String
  status      String                 @default("QUEUED")
  providerRef String?
  createdBy   String
  createdAt   DateTime               @default(now())
  updatedAt   DateTime               @updatedAt
  customer    Customer               @relation(fields: [customerId], references: [id], onDelete: Cascade)
  order       Order?                 @relation(fields: [orderId], references: [id], onDelete: SetNull)

  @@index([customerId, createdAt])
  @@index([orderId, createdAt])
}

model Company {
  id             String            @id @default(cuid())
  name           String
  isInternal     Boolean           @default(false)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  customers      Customer[]
  userAccounts   UserAccount[]
  settings       CompanySettings?
  emailTemplates EmailTemplate[]

  @@unique([name])
}

model CompanySettings {
  id                        String   @id @default(cuid())
  companyId                 String   @unique
  company                   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  // Email Configuration
  emailFromName             String?
  emailFromAddress          String?
  emailReplyTo              String?
  useCustomEmailProvider    Boolean  @default(false)
  customPostmarkToken       String?
  customMailgunDomain       String?
  customMailgunApiKey       String?
  
  // Feature Toggles
  enableProofWorkflow       Boolean  @default(true)
  enableCustomerPortal      Boolean  @default(true)
  enableAutoNotifications   Boolean  @default(true)
  requireProofApproval      Boolean  @default(true)
  
  // Branding
  brandLogoUrl              String?
  brandPrimaryColor         String?
  customEmailFooter         String?
  
  // Notifications
  notifyOnOrderCreated      Boolean  @default(true)
  notifyOnStatusUpdate      Boolean  @default(true)
  notifyOnProofReview       Boolean  @default(true)
  notifyOnProofResponse     Boolean  @default(true)
  
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
  
  @@index([companyId])
}

model EmailTemplate {
  id          String   @id @default(cuid())
  companyId   String?  // null = system default
  company     Company? @relation(fields: [companyId], references: [id], onDelete: Cascade)
  
  name        String   // e.g., "ORDER_CREATED", "STATUS_UPDATE"
  subject     String
  textBody    String   // Plain text version
  htmlBody    String?  // HTML version (optional)
  description String?  // Admin-facing description
  
  isActive    Boolean  @default(true)
  isDefault   Boolean  @default(false) // System fallback
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String
  
  @@unique([companyId, name])
  @@index([companyId])
  @@index([name])
}

model SystemSettings {
  id    String @id @default(cuid())
  key   String @unique
  value String
  
  // Metadata
  category    String   // "email", "storage", "notifications", etc.
  description String?
  isSensitive Boolean  @default(false) // Mask in UI (e.g., API keys)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  updatedBy   String?
  
  @@index([category])
}

model AuditLog {
  id          String   @id @default(cuid())
  
  // Who
  actorId     String?  // UserAccount ID or null for system
  actorEmail  String
  actorRole   String
  
  // What
  action      String   // "CREATE", "UPDATE", "DELETE", "LOGIN", etc.
  resource    String   // "USER", "ORDER", "COMPANY", "SETTINGS", etc.
  resourceId  String?  // ID of affected resource
  
  // Details
  details     Json?    // Before/after values, etc.
  ipAddress   String?
  userAgent   String?
  
  // Scope
  companyId   String?  // For company-scoped actions
  
  createdAt   DateTime @default(now())
  
  @@index([createdAt])
  @@index([actorId])
  @@index([resource, resourceId])
  @@index([companyId])
  @@index([action])
}
